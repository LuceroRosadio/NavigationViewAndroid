<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview"
    android:layout_margin="10dp"
    android:id="@+id/productCardview">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <FrameLayout
            android:id="@+id/fl_producto"
            android:layout_width="112dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_base64"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp"/>

            <ImageButton
                android:id="@+id/ib_producto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/plus_48"
                android:layout_gravity="bottom|end"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl_producto">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_product"
                android:text="SKU: "/>

            <TextView
                android:id="@+id/tv_sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tv1"
                android:layout_toEndOf="@+id/tv1"
                android:layout_alignBaseline="@id/tv1"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:textColor="@color/tv_product"
                android:text="Marca: "/>

            <TextView
                android:id="@+id/tv_marca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sku"
                android:layout_toRightOf="@+id/tv2"
                android:layout_toEndOf="@+id/tv2"
                android:text="producto2"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv2"
                android:textColor="@color/tv_product"
                android:text="Unidad: "/>

            <TextView
                android:id="@+id/tv_unidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_marca"
                android:layout_toRightOf="@+id/tv3"
                android:layout_toEndOf="@+id/tv3" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv3"
                android:textColor="@color/tv_product"
                android:text="Version: "/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_unidad"
                android:layout_toRightOf="@+id/tv4"
                android:layout_toEndOf="@+id/tv4" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv4"
                android:textColor="@color/tv_product"
                android:text="Codigo: "/>

            <TextView
                android:id="@+id/tv_codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_version"
                android:layout_toRightOf="@+id/tv5"
                android:layout_toEndOf="@+id/tv5" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>